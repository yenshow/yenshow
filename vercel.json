{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.yenshow.com/:path*"
    },
    {
      "source": "/storage/:path*",
      "destination": "https://api.yenshow.com/storage/:path*"
    }
  ],
  "headers": [
    {
      "source": "/_vercel/image",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(?:png|jpg|jpeg|webp|svg|gif|ico|woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=0, s-maxage=600, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/__sitemap__/:path*.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=0, s-maxage=600, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}